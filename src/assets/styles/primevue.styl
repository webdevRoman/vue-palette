@import './vars'

.dialog
  &-levels
    &.p-dialog
      max-width: 90%
      &-maximized
        max-width: none
  &-scale
    &.p-dialog
      width 600px
  &-line
    &.p-dialog
      width 600px
      .p-dialog-content
        padding-top 30px
    .p-dropdown-label
      width 175px

.cell
  .p-colorpicker-preview
    width 100%

.level
  &-value
    &__input
      max-width 100%
      .p-inputnumber-input
        max-width 100%
        text-align center

.input_wrong .p-inputnumber-input
  border 1px solid $danger-color
  box-shadow 0 0 0 0.2rem rgba($danger-color, 0.5)