@import 'vars'

a
  color $cFontDark
  border-bottom 3px solid transparent
  transition .2s
  &:hover
    border-bottom 3px solid $cActive

html
  font-family: $font
  font-size: $fzText
  color: $cFontDark
  height: 100%
  @media screen and (max-width: $wL)
    font-size: 16px
  @media screen and (max-width: $wM)
    font-size: 15px
  @media screen and (max-width: $wS)
    font-size: 14px

body
  overflow-x: hidden

