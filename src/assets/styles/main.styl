.container
  width: 100%
  display: flex
  flex: 0 0 auto
  flex-wrap: wrap
  position: relative
  margin: 0 auto
  max-width: $wcXL
  @media screen and (max-width: $wXL)
    max-width: $wcL
  @media screen and (max-width: $wL)
    max-width: $wcM
  @media screen and (max-width: $wM)
    max-width: $wcS
  @media screen and (max-width: $wS)
    max-width: $wcXS

