@import 'vars'

a
  color $cFontDark
  border-bottom 3px solid transparent
  transition .2s
  &:hover
    border-bottom 3px solid $cActive

html
  font-family: $font
  font-size: $fzText
  color: $cFontDark
  height: 100%
  @media screen and (max-width: $wL)
    font-size: 16px
  @media screen and (max-width: $wM)
    font-size: 15px
  @media screen and (max-width: $wS)
    font-size: 14px

body
  overflow-x: hidden

.text
  font-size: 16px
  line-height: 1.5

.label
  display block
  font-size 12px
  color #6c757d
  margin 0 0 0.5rem 0.5rem

.flex
  display flex
  &-sb
    justify-content space-between
  &-10
    flex-basis 10%
  &-20
    flex-basis 20%
  &-25
    flex-basis 25%
  &-30
    flex-basis 30%
  &-40
    flex-basis 40%
  &-50
    flex-basis 50%
  &-60
    flex-basis 60%
  &-70
    flex-basis 70%
  &-75
    flex-basis 75%
  &-80
    flex-basis 80%
  &-90
    flex-basis 90%
  &-100
    flex-basis 100%

.fullwidth
  width 100%

.checkbox
  display flex
  align-items center
  .checkbox
    &__box
      margin-right 10px
    &__label
      display inline-block
      max-width 280px
      cursor pointer