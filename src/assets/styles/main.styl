.title
  font-size: 36px
  font-weight: bold

.text
  font-size: 16px
  line-height: 1.5

.flex
  display flex
  &-horizontal
    justify-content space-between
  &-10
    flex-basis 10%
  &-20
    flex-basis 20%
  &-25
    flex-basis 25%
  &-30
    flex-basis 30%
  &-40
    flex-basis 40%
  &-50
    flex-basis 50%
  &-60
    flex-basis 60%
  &-70
    flex-basis 70%
  &-75
    flex-basis 75%
  &-80
    flex-basis 80%
  &-90
    flex-basis 90%
  &-100
    flex-basis 100%